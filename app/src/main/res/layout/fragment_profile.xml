<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/userEmailAddressView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/changePasswordLabelView"
        android:layout_marginTop="150dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textSize="23sp"
        app:layout_constraintTop_toBottomOf="@id/userEmailAddressView"
        android:text="@string/change_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="@string/type_password"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/changePasswordLabelView"
        android:id="@+id/changePasswordInputView"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="20dp"
        android:hint="@string/type_confirm_password"
        app:layout_constraintTop_toBottomOf="@id/changePasswordInputView"
        android:id="@+id/changePasswordConfirmationView"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:text="@string/save"
        android:id="@+id/changePasswordBtn"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/changePasswordConfirmationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/signOutBtn"
        android:text="@string/sign_out"
        app:layout_constraintTop_toBottomOf="@id/changePasswordBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>